<UserControl x:Class="CalculatorWPF.Views.ClearButtonsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:CalculatorWPF.ViewModels">

    <UserControl.DataContext>
        <viewModels:ClearButtonsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="clearEntryButton" Grid.Column="0" Command="{Binding ClearEntry}" Content="CE"/>
        <Button x:Name="clearAllButton" Grid.Column="1" Command="{Binding ClearAll}" Content="C"/>
        <Button x:Name="clearLastButton" Grid.Column="2" Command="{Binding ClearLast}">
            <Path Stroke="Black" Data="M6,0 L22,0 L22,16 L6,16 L0,8 L6,0 M10,4 L18,12 M10,12 L18,4" StrokeThickness="1"/>
        </Button>
    </Grid>
</UserControl>
